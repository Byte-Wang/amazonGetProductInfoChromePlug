{  
  "manifest_version": 3,  
  "name": "亚马逊商品信息查询插件",  
  "version": "1.0",  
  "description": "亚马逊商品信息查询插件",  
  "permissions": ["activeTab"],  
  "action": {  
    "default_popup": "popup.html",  
    "default_icon": {  
      "16": "icon16.png",  
      "48": "icon48.png",  
      "128": "icon128.png"  
    }  
  },  
  "background": {
    "service_worker": "background.js"
 },
  "content_scripts": [  
    {  
      "matches": ["<all_urls>"], 
      "js": ["content.js","background.js"],   
      "run_at": "document_end" 
    }  
  ],  
  "icons": {  
    "16": "icon16.png",  
    "48": "icon48.png",  
    "128": "icon128.png"  
  }  
}